{
  "name": "high-precision-sensor",
  "version": "1.0.0",
  "description": "High precision tilt angle sensor PWA for iOS with calibration, filtering, and offline support.",
  "type": "module",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "test": "vitest",
    "test:e2e-smoke": "node tests/e2e-offline-smoke.mjs",
    "test:e2e:table-level": "node tests/e2e-table-level-smoke.mjs",
    "test:e2e:all": "npm run test:e2e-smoke && npm run test:e2e:table-level",
    "serve:iphone": "node scripts/serve-static-lan.mjs --host 0.0.0.0 --port 4173",
    "tunnel:iphone": "npx --yes localtunnel --port 4173",
    "iphone:test": "node scripts/start-iphone-test.mjs --port 4173"
  },
  "keywords": [
    "pwa",
    "sensor",
    "tilt",
    "ios",
    "calibration"
  ],
  "author": "AKIHIRO",
  "license": "MIT",
  "devDependencies": {
    "playwright": "^1.58.2",
    "vitest": "^4.0.18"
  }
}
